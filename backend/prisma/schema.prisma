generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  username       String          @unique
  email          String          @unique
  password       String
  name           String?
  bio            String?
  avatar         String?
  location       String?
  website        String?
  postsCount     Int             @default(0)
  followersCount Int             @default(0)
  followingCount Int             @default(0)
  totalLikes     Int             @default(0)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  attachments    Attachment[]
  bookmarks      Bookmark[]
  comments       Comment[]
  likes          Like[]
  posts          Post[]
  searchHistory  SearchHistory[]

  @@index([username])
  @@index([name])
  @@map("users")
}

model Post {
  id             String       @id @default(uuid())
  title          String
  content        String
  image          String?
  isPublished    Boolean      @default(true)
  likesCount     Int          @default(0)
  commentsCount  Int          @default(0)
  bookmarksCount Int          @default(0)
  authorId       String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  attachments    Attachment[]
  bookmarks      Bookmark[]
  comments       Comment[]
  likes          Like[]
  postTags       PostTag[]
  author         User         @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([createdAt])
  @@index([isPublished])
  @@index([title])
  @@index([isPublished, likesCount])
  @@map("posts")
}

model Comment {
  id         String   @id @default(uuid())
  content    String
  likesCount Int      @default(0)
  authorId   String
  postId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  likes      Like[]

  @@index([postId])
  @@index([authorId])
  @@index([createdAt])
  @@map("comments")
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  postId    String?
  commentId String?
  createdAt DateTime @default(now())
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@unique([userId, commentId])
  @@index([postId])
  @@index([commentId])
  @@map("likes")
}

model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("bookmarks")
}

model Attachment {
  id           String   @id @default(uuid())
  filename     String
  originalName String
  url          String
  mimeType     String
  size         Int
  postId       String
  uploaderId   String
  createdAt    DateTime @default(now())
  post         Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  uploader     User     @relation(fields: [uploaderId], references: [id], onDelete: Cascade)

  @@index([filename])
  @@index([originalName])
  @@index([postId])
  @@map("attachments")
}

model Tag {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?
  postsCount  Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  postTags    PostTag[]

  @@index([name])
  @@index([slug])
  @@index([postsCount])
  @@map("tags")
}

model PostTag {
  id        String   @id @default(uuid())
  postId    String
  tagId     String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([postId, tagId])
  @@index([postId])
  @@index([tagId])
  @@map("post_tags")
}

model SearchHistory {
  id        String   @id @default(uuid())
  userId    String?
  query     String
  type      String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("search_history")
}
